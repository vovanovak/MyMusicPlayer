<Window x:Class="MyMusicPlayer.AddNewPlayList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddNewPlayList" Height="137" Width="300" WindowStyle="None" ResizeMode="NoResize">
    <Grid Background="Black">
        <Label Content="Name of PlayList&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox Name="textBox" HorizontalAlignment="Left" Height="23" Margin="113,69,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="169"/>
        <Button Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" Width="127" Click="buttonOK_Click"/>
        <Button Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="155,107,0,0" VerticalAlignment="Top" Width="127" Click="buttonCancel_Click"/>
        <Label Content="New PlayList" Name="labelTitle" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="22"/>
    </Grid>
</Window>
